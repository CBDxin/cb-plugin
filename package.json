{
	"name": "less-helper-chris",
	"displayName": "less-helper-chris",
	"description": "",
	"version": "0.0.1",
	"publisher": "chris",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescriptreact",
		"onLanguage:vue"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "setLocations",
				"title": "设置less变量文件路径"
			}
		],
		"snippets": [
			{
				"language": "less",
				"path": "./snippets/css.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId  == less",
					"command": "setLocations",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"when": "resourceExtname == .less",
					"command": "setLocations",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "less-helper-chris",
			"properties": {
				"lessvarChris.locations": {},
				"less-helper-chris.lessVariablesPath": {
					"type": "string",
					"default": "var.less",
					"description": "less变量文件路径"
				},
				"less-helper-chris.globalCssPath": {
					"type": "string",
					"default": "var.less",
					"description": "全局css样式文件路径"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/postcss-less": "^3.1.1",
		"@types/postcss-safe-parser": "^4.0.0",
		"color-alpha": "^1.1.3",
		"color-rgba": "^2.4.0",
		"get-css-colors": "^4.0.0",
		"less-vars-to-js": "^1.3.0",
		"postcss": "^8.1.1",
		"postcss-less": "^3.1.4",
		"postcss-safe-parser": "^5.0.2"
	}
}
